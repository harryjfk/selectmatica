{# default Sliding pagination control implementation #}

{% if pageCount > 1 %}
    <div class="pagination">
        {% if first is defined  %}
            <li class="paginate_button previous {% if  current== first %} disabled {% endif %}" id="example1_previous">
                <a href="{{ path(route, query|merge({(pageParameterName): first})) }}" aria-controls="example1" data-dt-idx="0" tabindex="0">First</a>
            </li>

        {% endif %}

        {% if previous is defined %}
            <li class="paginate_button previous {% if  current== first %} disabled {% endif %}" id="example1_previous"><a href="{{ path(route, query|merge({(pageParameterName): previous})) }}"
                                                                                    aria-controls="example1"
                                                                                    data-dt-idx="0"
                                                                                    tabindex="0">Previous</a>
            </li>
        {% endif %}

        {% for page in pagesInRange %}
            <li class="paginate_button {% if page == current %}active {% endif %}"><a  {% if page == current %}class="non-ajax" {% endif %}href="

            {% if page == current %}
            #
            {% else %}
            {{ path(route, query|merge({(pageParameterName): page})) }} {% endif %}" aria-controls="example1" data-dt-idx="{{ page }}"
                                                  tabindex="0">{{ page }}</a></li>


        {% endfor %}

        {% if next is defined %}
            <li class="paginate_button next " id="example1_next"><a href="{{ path(route, query|merge({(pageParameterName): next})) }}" aria-controls="example1"
                                                                   data-dt-idx="7"
                                                                   tabindex="0">Next</a></li>

        {% endif %}

        {% if last is defined  %}
            <li class="paginate_button next {% if  current== last %} disabled {% endif %}" id="example1_previous">
                <a href="{{ path(route, query|merge({(pageParameterName): last})) }}" aria-controls="example1" data-dt-idx="0" tabindex="0">Last</a>
            </li>

        {% endif %}
    </div>
{% endif %}
