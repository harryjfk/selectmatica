{% extends 'CommonAdminBaseBundle:Default:_list.html.twig' %}
{% block breadcumb_child %}
    <li>{% trans %}  bill.list{% endtrans %}</li>
{% endblock %}
{% block new_item %}{{ path('facturas_new') }}{% endblock %}
{% block delete_item %}
    '{{ path('facturas_delete') }}'
{% endblock %}
{% block title  %} {% trans %}  bill.list{% endtrans %}{% endblock %}

{% block header_url %}
    '{{ url('facturas') }}'
{% endblock %}
  {% block form_action %}
      {{ url('facturas') }}
  {% endblock %}
{% block columns%}

    <th style="width: 25px;">
        <input type="checkbox" id="chkall" class="chkall" />
    </th>
    <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1"
        aria-sort="ascending"
        aria-label="Rendering engine: activate to sort column descending">{{ knp_pagination_sortable(entities,  'bill.serie' , 'a.serie') }}</th>
    <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1"
        aria-sort="ascending"
        aria-label="Rendering engine: activate to sort column descending">{{ knp_pagination_sortable(entities,  'bill.ano' , 'a.ano') }}</th>

    <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1"
        aria-sort="ascending"
        aria-label="Rendering engine: activate to sort column descending">{{ knp_pagination_sortable(entities,  'bill.numero' , 'a.numero') }}</th>


        <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1"
                 aria-sort="ascending"
                 aria-label="Rendering engine: activate to sort column descending">{{ knp_pagination_sortable(entities,  'bill.importe' , 'a.importe') }}</th>


   <th>     {% trans %} actions.label{% endtrans %}
    </th>

{% endblock columns%}

{% block list_content %}
    {% for entity in entities %}
        <tr id="rw{{ entity.id }}" class="odd">
            <td>
                <input type="checkbox" name="idcheck[]" value="{{entity.id}}" id="id{{entity.id}}" class="selitm" />
                <label for="id{{entity.id}}"></label>
            </td>
            <td class="sorting_1">
                {{ entity.serie }}
                 </td>
            <td class="sorting_2">
                {{ entity.ano }}
            </td>
            <td >
                {{ entity.numero }}
            </td>
            <td >
                    {{ entity.importe }}
                </td>
            <td> <ul class="list-actions">
                {#    <li>
                        <a href="{{ path('facturas_edit', { 'id': entity.id }) }}"> <span class="glyphicon glyphicon-edit"></span></a>
                    </li>
                    {#      <li>
                               <a aria-controls="gridview" href="{{ path('producto_delete', { 'id': entity.id }) }}"> <span class="glyphicon glyphicon-remove"></span></a>
                           </li>#}
                    <li>
                        <a class="non-ajax" target="download" href="{{ base_dir~entity.path }}"> <span class="glyphicon glyphicon-file"></span></a>
                    </li>
                </ul></td>
        </tr>

    {% endfor %}


{% endblock %}
{% block list_footer %}
    <th></th>
    <th rowspan="1" colspan="1">{% trans %}bill.serie{% endtrans %}</th>

    <th rowspan="1" colspan="1">{% trans %} bill.ano{% endtrans %}</th>

    <th rowspan="1" colspan="1">{% trans %} bill.numero{% endtrans %}</th>
     <th rowspan="1" colspan="1">{% trans %} bill.importe{% endtrans %}</th>

    <th rowspan="1" colspan="1">  {% trans %} actions.label{% endtrans %}</th>
{% endblock %}